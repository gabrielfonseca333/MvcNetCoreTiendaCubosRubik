@model Cubo

<div class="container my-4">
    <h2 class="text-center mb-4">Detalle del Cubo</h2>

    <div class="row">
        <div class="col-md-6 text-center">
            <img src="~/assets/images/cubos/@Model.Imagen" class="img-fluid rounded shadow" alt="@Model.Nombre">
        </div>
        <div class="col-md-6">
            <h3 class="text-primary">@Model.Nombre</h3>
            <p class="text-muted">@Model.Marca - @Model.Modelo</p>
            <h4 class="text-success">€@Model.Precio</h4>

            <div class="mt-4">
                <a href="#" class="btn btn-success me-2">Comprar</a>
                <a href="#" class="btn btn-warning me-2">Editar</a>
                <a href="#" class="btn btn-secondary">Volver a la tienda</a>
            </div>
        </div>
    </div>
</div>
